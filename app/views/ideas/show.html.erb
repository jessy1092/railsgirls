<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span9">
    <%= image_tag(@idea.picture_url, :width => "100%", class: "img-circle") if @idea.picture.present? %>
  </div>

  <div class="span3">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea) , class: "btn btn-info"%> |
      <%= link_to 'Destroy', @idea, confirm: 'Are you sure?', method: :delete , class: "btn btn-success" %> |
      <%= link_to 'Back', ideas_path , class: "btn btn-primary"
 %> 
    </p>
  </div>
</div>
